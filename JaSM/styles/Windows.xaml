<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Refrence to the global resources dictionary  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Global.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="main_WS" TargetType="Window">
        <!--  Style Setters  -->
        <Setter Property="Background" Value="{StaticResource main_BG}" />
        <Setter Property="Foreground" Value="{x:Null}" />

        <Setter Property="Width" Value="1000" />
        <Setter Property="Height" Value="500" />

        <Setter Property="FontFamily" Value="Yu Gothic UI" />

        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="WindowStyle" Value="None" />

        <Setter Property="Title" Value="JaSM" />
        <Setter Property="Icon" Value="/resources/logo.png" />
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="Cursor" Value="Arrow" />
    </Style>
</ResourceDictionary>